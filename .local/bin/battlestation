#!/bin/sh
xrandr --output DisplayPort-0 --primary --mode 1920x1080 --pos 1920x2160 --rotate normal --output DisplayPort-1 --mode 3840x2160 --pos 960x0 --rotate normal --output DisplayPort-2 --mode 1920x1080 --pos 0x2160 --rotate normal --output HDMI-A-0 --mode 1920x1080 --pos 3840x2160 --rotate normal --output DVI-D-0 --off

#!/usr/bin/zsh

ERROR="Please use main or class as the first argument."

if [ $1 = "main" ]; then
	#Move main template into cwd
	cp "$TEMPLATE_HOME/CPP/main.cpp" $PWD/
elif [ $1 = "class" ]; then
	#move class files into directory called from and rename them to class name found in $2
	echo $2
	cat "$TEMPLATE_HOME/CPP/class_name.cpp" | sed -e "s/CHANGE/$2/g" > $PWD/$2.cpp
	cat "$TEMPLATE_HOME/CPP/class_name.hpp" | sed -e "s/CHANGE/$2/g" > $PWD/$2.hpp
elif [ $1 = "header" ]; then
	echo $2
	cat "$TEMPLATE_HOME/CPP/class_name.hpp" | sed -e "s/CHANGE/$2/g" > $PWD/$2.hpp
else
	#Echo an error
	echo $ERROR
fi
